component auto01 {
	def main(a: int) -> bool {
		return post(a, a++, a)
			&& post(a, a--, a)
			&& pre(a, ++a, a)
			&& pre(a, --a, a);
	}
	def post(a: int, b: int, c: int) -> bool {
		var d = b - c;
		return a == b && (d * d == 1);
	}
	def pre(a: int, b: int, c: int) -> bool {
		var d = a - c;
		return b == c && (d * d == 1);
	}
}
