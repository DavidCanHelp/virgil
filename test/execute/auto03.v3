def main(a: int) -> bool {
	var m = [a];
	return post(m(0), m(0)++, m(0))
		&& post(m(0), m(0)--, m(0))
		&& pre(m(0), ++m(0), m(0))
		&& pre(m(0), --m(0), m(0));
}
def post(a: int, b: int, c: int) -> bool {
	var d = b - c;
	return a == b && (d * d == 1);
}
def pre(a: int, b: int, c: int) -> bool {
	var d = a - c;
	return b == c && (d * d == 1);
}

