//@execute 0=3; 1=4; 2=9
component gskip03 {
	var inputs: Array<string> = [
		"//\nc",
		"//c\nc",
		"//@parse\nf"
	];

	var globalPos: int;
	def main(a: int) -> int {
		setPos(0);
		skip(inputs[a]);
		return globalPos;
	}
	def skip(input: string) {
		// skip forward over whitespace and comments
		var curPos = globalPos;
		var max = input.length;
		while (curPos < max) {
			var ch = input[curPos];
			match (ch) {
				'/' : {
					where('/');
					if (checkNextSlash(input, curPos)) break;
					// skip line comment
					curPos = curPos + 2;
					while (curPos < max) {
						if (input[curPos] == '\n') break;
						curPos = curPos + 1;
					}
				}
			} else if (ch >= ' ') {
				where('L');
				break;
			}
			where('E');
			curPos = curPos + 1;
		}
		// reached the end or a non-whitespace byteacter
		setPos(curPos);
	}
	def checkNextSlash(input: string, curPos: int) -> bool {
		return curPos >= input.length - 1 || input[curPos + 1] != '/';
	}
	def setPos(p: int) {
		globalPos = p;
	}
	def where(c: byte) {
	}
}
