component order08 {
    var order: Array<int> = [0, 0];
    var pos: int = 0;

    def first() -> (int) -> int {
        order(pos) = 1;
        pos = pos + 1;
        return add;
    }

    def second(a: int) -> int {
        order(pos) = 2;
        pos = pos + 1;
        return a;
    }

    def add(a: int) -> int { return a + 2; }

    def main(arg: int) -> int {
	pos = 0;
        var result = first()(second(1));
	if (arg == 1) return order(0);
	if (arg == 2) return order(1);
	if (arg == 3) return result;
	return 0;
    }
}
