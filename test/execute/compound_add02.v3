class auto04a { var f: int; }
def main(a: int) -> bool {
	var o = auto04a.new();
	o.f = a;
	return post(o.f, o.f++, o.f)
		&& post(o.f, o.f--, o.f)
		&& pre(o.f, o.f += 1, o.f)
		&& pre(o.f, o.f -= 1, o.f);
}
def post(a: int, b: int, c: int) -> bool {
	var d = b - c;
	return a == b && (d * d == 1);
}
def pre(a: int, b: int, c: int) -> bool {
	var d = a - c;
	return b == c && (d * d == 1);
}
