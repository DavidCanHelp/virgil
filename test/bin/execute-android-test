#!/bin/bash

SRC_DIR=`pwd`

EXE_DIR=$1
shift

if [ "$#" = 0 ]; then
    echo "no tests to run"
    exit 0
fi

function fail() {
    echo "##+setup"
    echo "##-fail: $@"
    exit 1
}

X="/data/local/"
T="/sdcard/"

echo Creating $X/$EXE_DIR and $T/$SRC_DIR...
#ssh $C "mkdir -p $X/$EXE_DIR; mkdir -p $T/$SRC_DIR"
adb shell "mkdir -p $X/$EXE_DIR; mkdir -p $T/$SRC_DIR"

echo Copying test sources...
#rsync $@ $C:$T/$SRC_DIR
(cd $SRC_DIR; adb push $@ $T/$SRC_DIR)

echo Copying executables...
#rsync -r $EXE_DIR $C:$X/$EXE_DIR/../
(cd $EXE_DIR; adb push * $X/$EXE_DIR)

echo Running tests...
#ssh $C "cd $T/$SRC_DIR; execute-native-test $X/$EXE_DIR $@"
adb shell "cd $T/$SRC_DIR; /data/local/virgil/test/bin/execute-x86-linux-test $X/$EXE_DIR $@"
