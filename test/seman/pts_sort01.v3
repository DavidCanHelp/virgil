component sort01 {

    def sort<T>(a: Array<T>, gt: (T, T) -> bool) {
        var i = 0, len = a.length;
        while (i < len) {
	    var j = i + 1;
            while (j < len) {
                if (gt(a(i), a(j))) {
                   var t = a(i);
                   a(i) = a(j);
                   a(j) = t;
                }
		j = j + 1;
            }
	    i = i + 1;
        }
    }
}
