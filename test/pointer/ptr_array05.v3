//@execute 0 = 1076895760; 1 = 1076895760; 2 = 1076895760; 3 = 1076895760; 4=42
component ptr_array05 {
	def a: Array<int> = [0x10, 0x2000, 0x300000, 0x40000000];
	def main(a: int) -> int {
		if (a == 0) return sum0();
		if (a == 1) return sum1();
		if (a == 2) return sum2();
		if (a == 3) return sum3();
		return 42;
	}
	def sum0() -> int {
		var p = Pointer.atContents(a), max = p.add(16), sum = 0;
		for (i = 0; p.lt(max); p = p.add(4)) {
			sum = sum + p.load<int>();
		}
		return sum;
	}
	def sum1() -> int {
		var p = Pointer.atContents(a), max = p.add(12), sum = 0;
		for (i = 0; p.lteq(max); p = p.add(4)) {
			sum = sum + p.load<int>();
		}
		return sum;
	}
	def sum2() -> int {
		var min = Pointer.atContents(a), p = min.add(12), sum = 0;
		for (i = 0; p.gteq(min); p = p.add(-4)) {
			sum = sum + p.load<int>();
		}
		return sum;
	}
	def sum3() -> int {
		var min = Pointer.atContents(a).add(-4), p = min.add(16), sum = 0;
		for (i = 0; p.gt(min); p = p.add(-4)) {
			sum = sum + p.load<int>();
		}
		return sum;
	}
}
