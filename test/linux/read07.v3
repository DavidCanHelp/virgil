//@execute = true
component read07 {
	var array: Array<byte> = Array.new(100);
	def main() -> bool {
		var buf = Pointer.atContents(array);
		var path = Pointer.atContents("/dev/zero\x00");
		var fd = Linux.open(path, 0, 0);
		if (fd < 0) return false;
		if (Linux.read(fd, buf, array.length) != array.length) return false;
		for (i = 0; i < array.length; i++) {
			if (array(i) != 0) return false;
		}
		return true;
	}
}
