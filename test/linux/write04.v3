//@execute = true
def SYS_OPEN = 5;
def SYS_WRITE = 4;
def O_WRONLY = 0x0001;
def O_TRUNC  = 0x0400;
def O_CREAT  = 0x0200;
def main() -> bool {
	var str = "The quick brown fox jumped over the lazy dog.\n";
	var buf = Pointer.atContents(str);
	var path = Pointer.atContents("writable.txt\x00");
	var fd = Linux.syscall(SYS_OPEN, (path, O_WRONLY | O_TRUNC, 0)).0;
	if (fd <= 2) return false;
	var r = Linux.syscall(SYS_WRITE, (fd, buf, str.length)).0;
	return r == str.length;
}
