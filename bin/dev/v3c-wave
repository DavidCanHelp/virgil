#!/bin/bash
HERE=$(dirname ${BASH_SOURCE[0]})
BIN=$(cd $HERE/../ && pwd)
RT=$(cd $BIN/../rt/ && pwd)
V3C=${V3C:=$BIN/v3c}
N="$RT/native/"
W="$RT/wave/"
NATIVE="$N/NativeGlobalsScanner.v3 $N/NativeFileStream.v3"
WAVE="$W/wave.v3 $W/System.v3 $W/RiRuntime.v3 $W/ShadowStackScanner.v3"
GC="$RT/gc/*.v3"
# TODO: use -target=wasm after stable supports -wasm.runcmd=wizeng
exec $V3C -heap-size=100m -target=wave -wasm.runcmd=wizeng -rt.gc -rt.gctables "$@" $WAVE $NATIVE $GC
