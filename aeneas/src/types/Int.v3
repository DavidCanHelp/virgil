			IntAdd,
			IntMul,
			IntAnd,
			IntOr,
			IntXor: return op;
			IntLt:   return lookupInfix0(V3Infix.Gt);
			IntGt:   return lookupInfix0(V3Infix.Lt);
			IntLteq: return lookupInfix0(V3Infix.Gteq);
			IntGteq: return lookupInfix0(V3Infix.Lteq);
			_: return null;
		}
