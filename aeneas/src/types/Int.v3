	def genMixedSignCmp(opcode: Opcode, lt: IntType, rt: IntType, context: SsaContext, source: Source, args: Array<SsaInstr>, facts: int, b: SsaBuilder) -> SsaInstr {
		var x = args(0), y = args(1);
