			min = if(signed, box(-1 << (width - byte.!(1))));
			max = box(-1 ^ (0xFFFFFFFF << (width - if(signed, byte.!(1)))));
		} else {
			min = if(signed, boxL(-1L << (width - byte.!(1))));
			max = boxL(-1L ^ (0xFFFFFFFFFFFFFFFFL << (width - if(signed, byte.!(1)))));
