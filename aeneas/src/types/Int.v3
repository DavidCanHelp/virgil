			var syntax = V3OpSyntax.new(opcode, V3Infix.names(infix), emitSsa);
			var eval = if(signed, eval_i32, eval_u32);
			return setCache(infix, OperatorOf.new(opcode, unopTypes, binopTypes, resultType, syntax, eval));
		} else {
