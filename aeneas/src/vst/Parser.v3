		var id = token.image;
		if (kwCheck && id.length >= 2) {
			var kw = kwMap(kwHash(id) % kwMap.length);
			if (kw != null && Strings.equal(kw, id)) {
				p.errorAt(token.range(), Strings.format1("keyword \"%1\" cannot be used as identifier", id));
			}
		}
		return VstIdent<T>.new(token, null);
	}
	def boundOp(p: ParserState, infix: byte, op: Operator) -> InfixOp {
		var i = InfixOp.new(p.token(V3Infix.names(infix).length), infix, V3Infix.prec(infix));
		i.op = op;
		return i;
	}
	// parse an infix or member operator
	def parseInfix(p: ParserState) -> InfixOp {
		var op = '\x00';
		match (p.curByte) {
			'=' : op = if(p.peek(1) == '=', V3Infix.Equal);
			'!' : op = if(p.peek(1) == '=', V3Infix.NotEqual);
			'|' : {
				if (p.peek(1) == '|') return boundOp(p, V3Infix.OrOr, V3Op.opBoolOr);
				else op = V3Infix.Or;
			}
			'&' : {
				if (p.peek(1) == '&') return boundOp(p, V3Infix.AndAnd, V3Op.opBoolAnd);
				else op = V3Infix.And;
			}
			'<' : op = if(p.peek(1) == '=', V3Infix.Lteq, V3Infix.Lt);
			'>' : op = if(p.peek(1) == '=', V3Infix.Gteq, V3Infix.Gt);
			'+' : op = V3Infix.Add;
			'-' : op = V3Infix.Sub;
			'*' : op = V3Infix.Mul;
			'/' : op = V3Infix.Div;
			'%' : op = V3Infix.Mod;
			'^' : op = V3Infix.Xor;
			'#' : {
				var d = p.input, q = p.curPos;
				if (d.length - q > 2) {
					if (d(q + 1) == '>' && d(q + 2) == '>') op = V3Infix.Shr;
					if (d(q + 1) == '<' && d(q + 2) == '<') op = V3Infix.Shl;
				}
			}
		}
		if (op == '\x00') return null;
		return InfixOp.new(p.token(V3Infix.names(op).length), op, V3Infix.prec(op));
	}
	def reqKeyword(p: ParserState, kw: string) -> FilePoint {
		var start = optKeyword(p, kw);
		if (start == null) p.error1("\"%1\" expected", kw);
		return start;
	}
	def optKeyword(p: ParserState, kw: string) -> FilePoint {
		if (p.curByte != kw(0)) return null;
		var i = p.curPos, d = p.input, max = i + kw.length;
		if (max > d.length) return null;
		for (j < kw.length) {
			if (d(i + j) != kw(j)) return null;
		}
		if (max < d.length && Char.isIdentMiddle(d(max))) return null;
		var pt = FilePoint.new(p.fileName, p.curLine, p.curCol);
		p.advance(kw.length);
		return pt;
	}
	def term1(p: ParserState, start: FilePoint, ch: byte) -> FileRange {
		var endLine = p.curLine;
		var endColumn = p.curCol;
		if (p.curByte == ch) {
			p.advance1();
			endColumn++;
		} else {
			p.error1("\"%1\" expected", ch);
		}
		return FileRange.new(p.fileName, start.beginLine, start.beginColumn, endLine, endColumn);
	}
	def skipToNextToken(p: ParserState) {
		// skip forward over whitespace and comments
		var curPos = p.curPos, curLine = p.curLine, curCol = p.curCol;
		var input = p.input, max = input.length;
		while (curPos < max) {
			var ch = input(curPos);
			match (ch) {
				'\t': { curCol = 1 + (((curCol + 8) #>> 3) #<< 3); }
				' ' : { curCol++; }
				'\n': {
					p.lineEnds.add(curPos);
					curCol = 1;
					curLine++;
				}
				'/' : {
					if (curPos >= max - 1 || input(curPos + 1) != '/') break;
					// skip line comment
					curPos = curPos + 2;
					while (curPos < max) {
						if (input(curPos) == '\n') {
							p.lineEnds.add(curPos);
							curCol = 1;
							curLine++;
							break;
						}
						curPos++;
					}
				} 
			} else {
				if (ch < ' ' || ch > '~') {
					// illegal character!
					p.setPos(curPos, curLine, curCol);
					p.error1("invalid character valued %1", int.!(ch));
					curCol++;
				} else {
					// non-whitespace character, break
					break;
				}
			}
			curPos++;
		}
		// reached the end or a non-whitespace character
		p.setPos(curPos, curLine, curCol);
	}
	def skipNone(p: ParserState) {
		// don't skip any characters
	}
	def newValueExpr(token: Token, val: Val, vtype: Type) -> VarExpr {
		var expr = VarExpr.new(null, token, VstIdent<TypeRef>.new(token, null));
		expr.binding = ValueBinding.new(token, val, vtype);
		return expr;
	}
}
// a small closure for parsing var/def declarations
class VarDefParser(isPrivate: bool, isReadOnly: bool) {
	def parseLocal(p: ParserState) -> VarDecl {
		var id = Parser.parseIdentVoid(p).name;
		var tref = if(p.curByte == ':', Parser.parseTypeRef(p.advance1()));
		var init = if(p.curByte == '=', Parser.parseExpr(p.advance1()));
		var decl = VarDecl.new(id, tref, init);
		decl.isReadOnly = isReadOnly;
		return decl;
	}
	def parseVars(p: ParserState, id: VstIdent<void>) -> List<VarDecl> {
		var list: List<VarDecl>;
		while (true) {
			var lastPos = p.curPos;
			var tref = if(p.curByte == ':', Parser.parseTypeRef(p.advance1()));
			var init = if(p.curByte == '=', Parser.parseExpr(p.advance1()));
			var decl = VarDecl.new(id.name, tref, init);
			decl.isReadOnly = isReadOnly;
			list = List.new(decl, list);
			if (p.curByte == ',') {
				p.advance1();
				id = Parser.parseIdentVoid(p);
			} else if (p.curByte == ';') {
				p.advance1();
				break;
			} else {
				p.error("\',\' or \';\' expected");
				break;
			}
		}
		return list;
	}
	def parseDef(p: ParserState, prev: List<VstMember>) -> List<VstMember> {
		var id = Parser.parseIdent(p, Parser.parseTypeParam);
		if (p.curByte == '(' || id.params != null) return parseMethodSuffix(p, id, prev);
		var n = VstIdent<void>.new(id.name, null);
		return parseFieldSuffix(p, n, prev);
	}
	def parseVar(p: ParserState, prev: List<VstMember>) -> List<VstMember> {
		var id = Parser.parseIdentVoid(p);
		return parseFieldSuffix(p, id, prev);
	}
	private def parseFieldSuffix(p: ParserState, id: VstIdent<void>, prev: List<VstMember>) -> List<VstMember> {
		var vars = parseVars(p, id);
		for (l = Lists.reverse(vars); l != null; l = l.tail) {
			var v = l.head;
			prev = List.new(VstField.new(isPrivate, isReadOnly, v.token, v.tref, v.init), prev);
		}
		return prev;
	}
	private def parseMethodSuffix(p: ParserState, id: VstIdent<TypeParam>, prev: List<VstMember>) -> List<VstMember> {
		var params = Parser.parseList(0, p, '(', Parser.COMMA, ')', Parser.parseParamWithType);
		var rtype = if(p.optN("->") >= 0, Parser.parseTypeRef(p), TypeRef.new(null, null, null, Void.TYPE));
		var body = if(p.curByte == ';', EmptyStmt.new(p.token(1)), Parser.parseBlockStmt(p));
		var m = VstMethod.new(isPrivate, id.name, id.list(), params, rtype, body);
		return List.new(m, prev);
	}
}
def NEGATIVE = 0x001;
def DOUBLE   = 0x002;
def LONG     = 0x004;
def HEX      = 0x008;
def BINARY   = 0x010;
def OCTAL    = 0x020;
def U_SUFFIX = 0x040;
def L_SUFFIX = 0x080;
def F_SUFFIX = 0x100;
def D_SUFFIX = 0x200;
def FAIL     = 0x800;
def DIGIT_ZERO = u32.!('0');
def U32_LIMIT_10 = u32.!(429496729);
def U32_LIMIT_DIGIT = u32.!(6);
class NumberParser(array: Array<byte>, start: int) {
	var flags: int;
	var pos = start;
	var curByte: byte;
	var error_msg: string;
	var error_pos: int;
	new() {
		if (start < array.length) curByte = array(start);
	}
	def parse() {
		if (curByte == '-') {
			flags = flags | NEGATIVE;
			next("negative number", Char.isDecimal);
		}
		var v: Val;
		if (curByte == '0') {
			skip();
			match(curByte) {
				'x', 'X': return parseHex();
				'b', 'B': return parseBin();
				'0', '1', '2', '3', '4', '5', '6', '7': return parseOct();
				'8', '9': error("expected octal digit");
			}
			v = null;
		} else {
			v = accumDecimal((flags & NEGATIVE) != 0);
		}
		if (curByte == '.') {
			flags = flags | DOUBLE;
			skipDecimal(true);
		}
		if (curByte == 'E' || curByte == 'e') {
			flags = flags | DOUBLE;
			skip();
			if (curByte == '-') {
				skip();
			} else if (curByte == '+') {
				skip();
			}
			skipDecimal(true);
		}
		addSuffixes();
	}
	def parseHex() {
		flags = flags | HEX;
		next("hexadecimal", Char.isHex);
		addSuffixes();
	}
	def parseBin() {
		flags = flags | BINARY;
		next("binary", Char.isBinary);
		addSuffixes();
	}
	def parseOct() {
		flags = flags | OCTAL;
		addSuffixes();
	}
	def accumDecimal(negative: bool) -> Val {
		// assume the integer can fit into a u32.
		var ival = curByte - DIGIT_ZERO;
		while (true) {
			skip();
			var d = curByte - DIGIT_ZERO;
			if (d > u32.!(9)) {  // not a decimal digit. finish.
				var signed = int.!(ival);
				if (negative) {
					if (signed == int.min) return Box.new(signed);
					if (signed < 0) return Box<(int, int)>.new(-1, 0 - signed);
					return Box.new(0 - signed);
				}
				if (signed < 0) return Box<(int, int)>.new(0, signed);
				return Box.new(signed);
			} else {
				if (ival >= U32_LIMIT_10) {  // overflow to long
					if (ival == U32_LIMIT_10 && d >= U32_LIMIT_DIGIT) break;
					if (ival > U32_LIMIT_10) break;
				}
				ival = ival * u32.!(10) + d;
			}
		}
		// parse the rest of the integer as a long.
		var lval = Int64.from_u32(ival);
		var d = curByte - DIGIT_ZERO;
		lval = Int64.addu32(Int64.mulu16(lval, u16.!(10)), d);
		while (true) {
			skip();
			var d = curByte - DIGIT_ZERO;
			if (d > u32.!(9)) {  // not a decimal digit.
				if (negative) {
					if (lval.0 == int.min && lval.1 == 0) return Box.new(lval);
					if (lval.0 < 0) return Bool.FALSE;  // too large of a negative
					return Box.new(Int64.addu32((-1 ^ lval.0, -1 ^ lval.1), u32.!(1)));
				}
				return Box.new(lval);
			} else {
				lval = Int64.addu32(Int64.mulu16(lval, u16.!(10)), d);
			}
		}
		// the integer is too large to be represented in a long.
		skipDecimal(false);
		return Bool.FALSE;
	}
	def addSuffixes() {
		while (true) {
			match (curByte) {
				'u', 'U': suffix(U_SUFFIX, L_SUFFIX | LONG | HEX | BINARY | OCTAL);
				'l', 'L': suffix(L_SUFFIX, NEGATIVE | U_SUFFIX | LONG | HEX | BINARY | OCTAL);
				'f', 'F': suffix(F_SUFFIX, NEGATIVE | DOUBLE);
				'd', 'D': suffix(D_SUFFIX, NEGATIVE | DOUBLE);
			} else break;
			skip();
		}
