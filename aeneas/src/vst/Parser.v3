		flags = flags | flag;
	}
	def skipDecimal(expected: bool) {
		if (expected && !Char.isDecimal(curByte)) error("expected decimal digit");
		while (Char.isDecimal(curByte)) skip();  // eat the rest of the digits.
	}
	def skip() {
		if (pos < array.length) curByte = array(pos++);
		else curByte = '\x00';
	}
	def next(expect: string, check: byte -> bool) {
		pos++;
		if (pos < array.length) {
			curByte = array(pos);
			if (!check(curByte)) error(expect);
		} else {
			error(Strings.format1("unexpected end of input in %1", expect));
			curByte = '\x00';
		}
	}
	def error(msg: string) {
		if (error_msg != null) {
			error_msg = msg;
			error_pos = pos;
		}
	}
}
