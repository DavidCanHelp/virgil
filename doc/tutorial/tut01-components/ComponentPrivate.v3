component ComponentPrivate {
	// 'private' limits the scope of a member to the declaring component
	private var field1: int;      // a mutable field
	private def field2: int = 12; // an immutable field
	private def twice(a: int) -> int {
		return a + a;
	}
	// the default visibility is public
	def foo(a: int, b: int) -> int {
		return twice(field1) + field2;
	}
}
