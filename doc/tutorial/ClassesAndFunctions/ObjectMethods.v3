// a class to demonstrate object methods
class ObjectMethods {
	def f: int;
	new(f) { }
	def add(a: int) -> int {
		return a + f;
	}
}
component ObjectMethodDemo {
	var o = ObjectMethods.new(3);
	// "obj.method" can be used as a first class function
	var m: int -> int = o.add;
	// the function is bound to the object from which it came
	var x = m(2);
}
